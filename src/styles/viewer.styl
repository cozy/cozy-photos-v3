@require 'cozy-ui'


.pho-viewer-wrapper
    position        fixed
    left            0
    top             0
    z-index         100
    display         flex
    flex-direction  column
    background      grey-08
    width           100vw
    height          100vh
    overflow        hidden
    color           white

    &::after
        content     ''
        flex-shrink 0
        height      em(90px)


.pho-viewer-content
    display         flex
    flex-direction  row
    flex-grow       1


.pho-viewer-nav-previous, .pho-viewer-nav-next
    flex-shrink         0
    width               em(75px)
    background-position center
    background-repeat   no-repeat
    cursor              pointer

    &:hover,
    &:focus
        background-color alpha(black, .25)

.pho-viewer-nav-next
    background-image embedurl('../assets/icons/icon-arrow-right.svg')

.pho-viewer-nav-previous
    background-image embedurl('../assets/icons/icon-arrow-left.svg')


.pho-viewer-photo
    position        relative
    display         flex
    flex-grow       1
    justify-content center
    align-items     center

    img
        position   absolute
        top        50%
        left       50%
        transform  translate(-50%, -50%)
        display    block
        max-width  100%
        max-height 100%
        box-shadow 0 6px 24px 0 rgba(0, 0, 0, 0.5)


@media (max-width: (1023/basefont)rem)
    .pho-viewer-wrapper
        &::after
            display none

    .pho-viewer-nav-previous, .pho-viewer-nav-next
        display none

    .pho-viewer-photo img
        max-height 100vh
        box-shadow none
