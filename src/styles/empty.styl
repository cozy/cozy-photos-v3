@require 'cozy-ui'

.pho-empty
  text-align center
  &:before
    content     ''
    display     block
    margin      em(100px) auto 0
    width       em(160px)
    height      em(140px)
    background  embedurl("../assets/icons/icon-main-app.svg") center center / cover no-repeat
  h2
    font-size(24px)
    margin         em(33px) auto 0
    line-height    1.3
    color          grey-08
    letter-spacing -0.2px
  p
    margin-top  em(5px)
    color       grey-11
    line-height 1.5


@media (max-width: (1023/basefont)rem)
  .pho-empty
    &:before
      margin-top  em(50px)
      width       em(120px)
      height      em(105px)
    h2
      margin em(33px) 1.5em 0
    p
      margin em(5px) 1.5em 0
